<% if @camp.errors.any? %>
	<% @camp.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
<% end %>

<%= form_for @camp do |f| %>
	<p></p>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<p></p>
	<div>
		<%= f.label :address %>
		<%= f.text_area :address %>
	</div>
	<p></p>
	<div>
		<%= f.label :facilities %>
		<%= f.select :facilities, ['Primitive', 'Bathrooms', 'Showers & Bathrooms'] %>
	</div>
	<p></p>
	<div>
		<%= f.label :terrain %>
		<%= f.select :terrain, ['Mountainous', 'Hilly', 'Flat'] %>
	</div>
	<p></p>
	<div>
		<%= f.label :fires %>
		<%= f.select :fires, ['Permitted', 'Prohibited'] %>
	</div>
	<p></p>
	<div>
		<%= f.label :activities %>
		<%= f.select :activities, ['Canoeing', 'Fishing', 'Hiking'] %>
	</div>
	<p></p>
	<div>
		<%= f.submit %>
	</div>
	<p></p>
	<div>
		<%= link_to "Home", root_path %></li>

	</div>
<% end %>